{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Firebase Emulators",
            "type": "shell",
            "command": "firebase",
            "args": [
                "emulators:start"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "GOOGLE_APPLICATION_CREDENTIALS": "<path-to-your-service-account-file>.json"
                }
            },
            "problemMatcher": [],
            "presentation": {
                "panel": "dedicated",
                "clear": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}